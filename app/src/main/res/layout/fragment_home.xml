<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121c30"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/quote_icon"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tvQuote"
        app:layout_constraintStart_toStartOf="@+id/tvQuote" />
            <TextView
                android:id="@+id/tvQuote"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_bold_italic"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="200dp"
                android:textSize="22sp"
                android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font_semi_bold"
        android:textColor="#A8B4CE"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tvQuote"
        app:layout_constraintStart_toStartOf="@+id/tvQuote"
        app:layout_constraintTop_toBottomOf="@id/tvQuote" />



    <!-- Buttons -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"

        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnNewQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Quote"
            android:visibility="gone"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
<ImageView
    android:id="@+id/btnFavorite"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginStart="80dp"
    android:padding="20dp"
    android:layout_marginTop="100dp"
    android:background="@drawable/bg_circle"
    android:layout_marginBottom="150dp"
    android:src="@drawable/baseline_favorite"
   app:layout_constraintTop_toBottomOf="@+id/tvAuthor"
    app:layout_constraintStart_toStartOf="parent"

    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAVORITE"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/font_regular"
        app:layout_constraintEnd_toEndOf="@+id/btnFavorite"
        app:layout_constraintStart_toStartOf="@+id/btnFavorite"
        app:layout_constraintTop_toBottomOf="@+id/btnFavorite" />
    <ImageView
        android:id="@+id/btnShare"
        android:layout_width="60dp"
        android:layout_height="60dp"
       android:layout_marginEnd="80dp"
        android:padding="20dp"
        android:background="@drawable/bg_circle"
        android:layout_marginTop="100dp"
        android:src="@drawable/baseline_share_24"
       app:layout_constraintTop_toBottomOf="@+id/tvAuthor"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE"
        android:fontFamily="@font/font_regular"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/btnShare"
        app:layout_constraintStart_toStartOf="@+id/btnShare"
        app:layout_constraintTop_toBottomOf="@+id/btnShare" />


</androidx.constraintlayout.widget.ConstraintLayout>